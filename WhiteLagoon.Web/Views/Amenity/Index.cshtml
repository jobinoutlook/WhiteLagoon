@model IEnumerable<Amenity>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Amenity List</h2>
            </div>
        </div>

    </div>
    <div class="card-body border p-4 mb-5">
        @*mb-5 fixed margin bottom*@
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-action="Create" asp-controller="Amenity" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Amenity
                </a>
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Villa Name</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name </td>
                        <td>@item.Villa.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a class="btn btn-primary mx-2" asp-action="Update" asp-controller="Amenity" asp-route-amenityId="@item.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-danger mx-2" asp-action="Delete" asp-controller="Amenity" asp-route-amenityId="@item.Id">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
